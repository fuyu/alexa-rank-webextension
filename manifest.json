{
  "manifest_version": 2,
  "name": "Alexa Rank",
  "author": "Maksym Stefanchuk",
  "homepage_url": "https://github.com/fuyu/Googalexa",
  "version": "0.9.0",
  "description": "Minimalist Alexa rank",
  "icons": {
    "48": "icons/extension.png"
  },

  "permissions": [
    "tabs",
    "webRequest",
    "<all_urls>",
    "storage"
  ],

  "page_action": {
    "browser_style": true,
    "default_icon": "icons/address-bar.png",
    "default_title": "Alexa rank",
    "default_popup": "popup/details.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
